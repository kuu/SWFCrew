{
  "defaultTarget": "swfcrew",

  "properties": {
    "binDir": "bin"
  },

  "resources": {
    "TheatreScript": {
      "type": "package",
      "location": "git",
      "url": "git://github.com/Moncader/TheatreScript.git",
      "branch": "master",
      "targets": ["all"]
    },

    "QuickSWF": {
      "type": "package",
      "location": "git",
      "url": "git://github.com/Moncader/QuickSWF.git",
      "branch": "master",
      "target": "quickswf"
    },

    "AlphabetJS": {
      "type": "package",
      "location": "git",
      "url": "git://github.com/Moncader/AlphabetJS.git",
      "targets": ["AS1VM"]
    }
  },

  "targets": {
    "swfcrew": {
      "builder": "closure-compiler",
      "compilationLevel": "WHITESPACE_ONLY",
      "outputs": "${binDir}/swfcrew.js",
      "resources": [
        {
          "type": "reference",
          "name": "TheatreScript"
        },

        {
          "type": "reference",
          "name": "AlphabetJS"
        },

        {
          "type": "reference",
          "name": "QuickSWF"
        },

        {
          "type": "files",
          "root": "src",
          "files": [
            "swfcrew.js"
          ]
        },

        {
          "type": "files",
          "root": "src/actors",
          "files": [
            "compositor.js",
            "displaylistactor.js",
            "shape.js",
            "sprite.js",
            "canvassprite.js",
            "button.js"
          ]
        },

        {
          "type": "files",
          "root": "src/actions",
          "include": "\\.js$"
        },

        {
          "type": "files",
          "root": "src/actionscript",
          "include": "\\.js$"
        }
      ]
    }
  }
}
